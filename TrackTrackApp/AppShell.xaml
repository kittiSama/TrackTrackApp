<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TrackTrackApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TrackTrackApp"
    xmlns:views="clr-namespace:TrackTrackApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Sign Up"
        ContentTemplate="{DataTemplate views:SignUp}"
        Route="SignUp" />

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:Login}"
        Route="Login" />

    <ShellContent
        Title="UserMainPage"
        ContentTemplate="{DataTemplate views:UserMainPage}"
        Route="UserMainPage" />

    <ShellContent
        Title="SearchPage"
        ContentTemplate="{DataTemplate views:SearchPage}"
        Route="SearchPage" />

    <ShellContent
        Title="DataPage"
        ContentTemplate="{DataTemplate views:DataPage}"
        Route="DataPage" />

</Shell>
