<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TrackTrackApp.Views.SearchPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:TrackTrackApp.Models"
    xmlns:viewModels="clr-namespace:TrackTrackApp.ViewModels"
    x:Name="thepage"
    Title="SearchPage"
    x:DataType="viewModels:SearchPageViewModel">

    <VerticalStackLayout>
        <Label HorizontalOptions="Center" VerticalOptions="Center" />
        <Entry Text="{Binding NewQuery}" />
        <Button Command="{Binding SearchCommand}" Text="Search" />
        <CollectionView
            x:Name="mCollectionView"
            ItemsLayout="HorizontalList"
            ItemsSource="{Binding Albums}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Album">
                    <Grid Padding="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Image
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            HeightRequest="250"
                            Source="{Binding ImageUrl}"
                            WidthRequest="250" />
                        <Label Grid.Row="0" Text="{Binding AlbumTitle}" />
                        <ImageButton
                            Grid.Row="2"
                            Command="{Binding Source={Reference mCollectionView}, Path=BindingContext.LikeAlbumCommand}"
                            CommandParameter="{Binding AlbumID}"
                            HeightRequest="50"
                            Source="heart_icon.png"
                            WidthRequest="50" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>