<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TrackTrackApp.Views.DataPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:micro="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
    xmlns:models="clr-namespace:TrackTrackApp.Models"
    xmlns:viewModels="clr-namespace:TrackTrackApp.ViewModels"
    Title="DataPage"
    x:DataType="viewModels:DataPageViewModel">
    <VerticalStackLayout>
        <Button Command="{Binding BackButton}" Text="Go Back" />

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <micro:ChartView
                x:Name="artistChartView"
                Grid.Row="0"
                Grid.Column="0"
                Chart="{Binding artistChart}"
                HeightRequest="300"
                WidthRequest="300" />
            <micro:ChartView
                x:Name="genreChartView"
                Grid.Row="0"
                Grid.Column="1"
                Chart="{Binding artistChart}"
                HeightRequest="300"
                WidthRequest="300" />
        </Grid>
    </VerticalStackLayout>

</ContentPage>