<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrackTrackApp.Views.SignUp"
             xmlns:models="clr-namespace:BindingToObject.Models"
                xmlns:viewModels="clr-namespace:TrackTrackApp.ViewModels"
                x:DataType="viewModels:SignUpViewModel"
             Title="SignUp">
    
    <VerticalStackLayout>

        <Button
                Text="Go Back"
                Command="{Binding BackButton}" />
        
        <Label 
            Text="Sign Up"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="Header"/>

        <Label
            Text="Enter Username:"
            />
        <Entry Text="{Binding Username}" />
        <Label
            Text="Enter Password:"
            />
        <Entry Text="{Binding Password}" />
        <Label
            Text="Enter Email:"
            />
        <Entry Text="{Binding Email}" />


        <Button
                Text="Submit"
                Command="{Binding SubmitButton}" />

    </VerticalStackLayout>
</ContentPage>